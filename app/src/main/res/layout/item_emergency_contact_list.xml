<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/contact_item_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/first_name_letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:background="#273043"
                android:fontFamily="@font/roboto"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/emergency_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dad"
                android:textSize="24sp"
                android:textColor="@color/app_black"
                android:layout_marginStart="12dp"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/roboto"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/first_name_letter" />

            <TextView
                android:id="@+id/emergency_contact_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07032063910"
                android:textSize="16sp"
                android:textColor="@color/app_black"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto"
                app:layout_constraintTop_toBottomOf="@id/emergency_contact_name"
                app:layout_constraintStart_toEndOf="@id/first_name_letter" />

            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/list_menu_icon"
                android:tint="@android:color/darker_gray"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="4dp"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>